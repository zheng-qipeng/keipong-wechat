/**index.wxss**/
.userinfo {
  display: flex;
  align-items: center;
  color: #777;
}

#avatar-wrapper {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  padding: 0;
  flex-shrink: 0;
}
#avatar-wrapper image {
  width: 100%;
  height: 100%;
}

movable-area {
  width: 750rpx;
  height: calc(100% - 168rpx - 300rpx - (35px + 16px));
  /*background-color: #eee;*/
}
movable-view {
  height: 40rpx;
  background-color: #fff;
  border-radius: 6rpx;
  box-shadow: 0 1px 2px #888888;
  display: flex;
  justify-content: center;
}

movable-view [style] {
  font-size: 24rpx;
  color: blue;
  text-decoration: underline;
}

.weui-footer {
  padding-bottom: 16px;
}
