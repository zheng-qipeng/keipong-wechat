<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <block wx:if="{{canIUseOpenData}}" calss="userinfo-opendata">
      <view class="userinfo-avatar" bindtap="bindViewTap">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <open-data type="userNickName"></open-data>
    </block>
    <block wx:elif="{{!hasUserInfo}}">
      <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile"> 获取头像昵称 </button>
      <button wx:elif="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
      <view wx:else> 请使用1.4.4及以上版本基础库 </view>
    </block>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      <text class="user-motto">{{motto}}</text>
    </block>
  </view>
  <map id="myMap" show-location markers="{{markers}}" style="width: 100%; height: 300rpx"></map>

  <movable-area>
    <movable-view direction="all" out-of-bounds x="20rpx" y="20rpx" style="width: 160rpx;">
      <text style="color: #000; text-decoration: none;">{{motto}}</text>
    </movable-view>
    <movable-view direction="all" out-of-bounds x="20rpx" y="120rpx" style="width: 140rpx;">
      <navigator url="/pages/t-captcha/t-captcha" hover-class="none" style="">t-captcha</navigator>
    </movable-view>
    <movable-view direction="all" out-of-bounds x="20rpx" y="220rpx" style="width: 260rpx;">
      <navigator url="/pages/modem-bookmarks/modem-bookmarks" hover-class="none" style="">http://keipong.com</navigator>
    </movable-view>
    <movable-view direction="all" out-of-bounds x="20rpx" y="320rpx" style="width: 220rpx;">
      <navigator url="/pages/xiaomi-steps/xiaomi-steps" hover-class="none" style="">小米运动步数更新</navigator>
    </movable-view>
  </movable-area>

  <!--在引入 weui.wxss 后，可以直接使用 weui-wxss 中定义的 class 自定义样式(https://github.com/wechat-miniprogram/weui-miniprogram/tree/master/tools/demo)-->
  <view class="weui-footer">
    <view class="weui-footer__links">
      <navigator url="http://keipong.com" data-url="http://keipong.com" class="weui-footer__link" bindtap="bindCopyUrl">keipong.com</navigator>
    </view>
    <view class="weui-footer__text">Copyright © 2019 - keipong</view>
  </view>

</view>
